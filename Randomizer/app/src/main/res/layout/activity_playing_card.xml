<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_playing_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayingCard">

    <TextView
        android:id="@+id/title_playing_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="@string/title_playing_card"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_playing_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/button_playing_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_playing_card"
        app:layout_constraintVertical_bias="0.404" />

    <TextView
        android:id="@+id/answer_playing_card_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/answer_playing_card_num"
        app:layout_constraintBottom_toTopOf="@+id/button_playing_card"
        app:layout_constraintEnd_toStartOf="@+id/of"
        app:layout_constraintHorizontal_bias="0.874"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_playing_card" />

    <TextView
        android:id="@+id/of"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/of"
        app:layout_constraintBottom_toTopOf="@+id/button_playing_card"
        app:layout_constraintEnd_toStartOf="@+id/answer_playing_card_suit"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_playing_card" />

    <TextView
        android:id="@+id/answer_playing_card_suit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="239dp"
        android:layout_marginLeft="239dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="148dp"
        android:layout_marginRight="148dp"
        android:layout_marginBottom="16dp"
        android:text="@string/answer_playing_card_suit"
        app:layout_constraintBottom_toTopOf="@+id/button_playing_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_playing_card" />

    <ImageView
        android:id="@+id/img_card_number"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_playing_card"
        app:layout_constraintVertical_bias="0.464"
        app:srcCompat="@drawable/icons8_cards_50" />

    <ImageView
        android:id="@+id/img_card_suit"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.414"
        app:layout_constraintStart_toEndOf="@+id/img_card_number"
        app:layout_constraintTop_toBottomOf="@+id/button_playing_card"
        app:layout_constraintVertical_bias="0.406"
        app:srcCompat="@drawable/poker" />

</androidx.constraintlayout.widget.ConstraintLayout>